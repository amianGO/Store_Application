spring.application.name=inventory_app

# ===============================
# CONFIGURACIÓN DE BASE DE DATOS
# ===============================
# IMPORTANTE: Copia este archivo a application.properties y configura tus credenciales reales
spring.datasource.url=jdbc:postgresql://localhost:5433/app_main
spring.datasource.username=TU_USUARIO_AQUI
spring.datasource.password=TU_PASSWORD_AQUI
spring.datasource.driver-class-name=org.postgresql.Driver

# Configuracion de Hibernate / JPA
# IMPORTANTE: ddl-auto=none para multi-tenancy
# Las tablas se crean desde template_schema.sql y se clonan a cada tenant
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true

# NOTA: La configuración Multi-Tenancy se hace en MultiTenancyConfig.java
# para tener control total sobre los beans y su inicialización

# Configuracion de conexion a la base de Datos
spring.datasource.hikari.maximum-pool-size=20
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.idle-timeout=300000
spring.datasource.hikari.connection-timeout=20000

# Configuracion del servidor
server.port=8080
server.servlet.context-path=/

# Configuracion de logging
logging.level.com.example.inventory_app=DEBUG
logging.level.org.springframework.security=DEBUG

# Configuracion de validacion
spring.jpa.properties.hibernate.validator.fail_fast=true

# ===============================
# CONFIGURACIÓN DE EMAIL (Gmail)
# ===============================
# Servidor SMTP
spring.mail.host=smtp.gmail.com
spring.mail.port=587

# Credenciales - REEMPLAZAR CON TUS DATOS REALES:
# 1. Activa la verificación en 2 pasos en tu cuenta de Gmail
# 2. Ve a https://myaccount.google.com/apppasswords
# 3. Genera un "App Password" para "Mail"
# 4. Usa ese password de 16 caracteres aquí
spring.mail.username=tu_email@gmail.com
spring.mail.password=tu_app_password_de_16_caracteres

# Configuración adicional
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.properties.mail.smtp.starttls.required=true

# ===============================
# CONFIGURACIÓN DE JWT
# ===============================
# Generar secret seguro con: openssl rand -base64 32
jwt.secret=tu_jwt_secret_key_aqui_minimo_32_caracteres
jwt.expiration=86400000

# ===============================
# URL DEL FRONTEND (para emails de verificación)
# ===============================
app.frontend.url=http://localhost:5173

# ===============================
# INSTRUCCIONES DE USO:
# ===============================
# 1. Copia este archivo a: application.properties
# 2. Reemplaza TU_USUARIO_AQUI y TU_PASSWORD_AQUI con tus credenciales de PostgreSQL
# 3. Reemplaza tu_email@gmail.com con tu email de Gmail
# 4. Genera un Gmail App Password y reemplaza tu_app_password_de_16_caracteres
# 5. Genera un JWT secret con: openssl rand -base64 32
# 6. NUNCA commitees application.properties con datos reales a Git
